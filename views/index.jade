doctype 5
html(ng-app)
  head
    title= title
    meta(http-equiv='content-type', content='text/html; charset=utf-8')
    link(rel='stylesheet', href='#{domain}/css/style.css')
    script(type='text/javascript', src='http://ajax.googleapis.com/ajax/libs/angularjs/1.0.4/angular.min.js')
    script(type='text/javascript', src='#{domain}/js/controller.js')
  body
     form(ng-submit='submit()', ng-controller='AddPlace', id='addPlace')
             input(type='text', ng-model='plTitle', name='plTitle')
             textarea(name='plDescription', ng-model='plDescription')
             input(type='submit', id='submit', value='Submit')